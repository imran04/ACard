<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <style>
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
    <link rel="stylesheet/less" type="text/css" href="@Url.Content("~/Less/Bootstrap.less")">
@*    <link rel="stylesheet/less" type="text/css" href="@Url.Content("~/Less/responsive.less")">*@
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/less-1.3.0.min.js")" type="text/javascript"></script>
   @* <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>*@
</head>
<body>

 <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Project name</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li>@Html.ActionLink("Home", "Index", "Home")</li>
              <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
              @Html.Partial("_LogOnPartial")
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <section style="min-height:500px;">
    <div class="container">
    
    <div class="row-fluid">
        <div class="span3">
        @{Html.RenderAction("RightNav","Partial");}
        </div>
   <div class="span9"> @RenderBody()</div>
      
      
    </div>
    
    </div> <!-- /container -->
    </section>
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    
    <script src="@Url.Content("~/Scripts/bootstrap-transition.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-alert.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-modal.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-scrollspy.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tab.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-popover.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-button.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-collapse.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-carousel.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-typeahead.js")"></script>
    
    
    <footer style="text-align:center;">
    &copy; MyOffer @DateTime.UtcNow.Year
    </footer>
   
           
     
</body>
</html>
